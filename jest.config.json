{
  "moduleFileExtensions": ["js", "json", "ts", "tsx"],
  "rootDir": "src",
  "testRegex": ".*\\.spec\\.ts$",
  "collectCoverageFrom": ["**/*.(t|j)s?(x)"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coverageReporters": ["json", "text", "lcov", "clover", "cobertura"],
  "coveragePathIgnorePatterns": [
    ".module.ts",
    "spec.ts",
    "<rootDir>/main.ts",
    "coverage"
  ],
  "clearMocks": true,
  "workerIdleMemoryLimit": "2048MB"
}
